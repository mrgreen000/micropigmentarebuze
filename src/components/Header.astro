<header class="fixed w-full top-0 z-40 bg-white/95 backdrop-blur-sm shadow-sm">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <div>
        <div class="font-bold text-lg text-gray-900">Paula Lupu</div>
        <div class="text-xs text-primary-600">Micropigmentare Buze</div>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden lg:flex items-center space-x-8">
        <a href="#home" class="text-gray-700 hover:text-primary-600 transition-colors font-medium">Acasă</a>
        <a href="#servicii" class="text-gray-700 hover:text-primary-600 transition-colors font-medium">Servicii</a>
        <a href="#despre" class="text-gray-700 hover:text-primary-600 transition-colors font-medium">Despre Mine</a>
        <a href="#lucrari" class="text-gray-700 hover:text-primary-600 transition-colors font-medium">Lucrări</a>
        <a href="#recenzii" class="text-gray-700 hover:text-primary-600 transition-colors font-medium">Recenzii</a>
        <a href="#contact" class="text-gray-700 hover:text-primary-600 transition-colors font-medium">Contact</a>
        <a
          href="https://api.whatsapp.com/send/?phone=40732163268&text=Buna%20ziua,%20v-am%20contactat%20de%20pe%20www.micropigmentarebuze.ro.%20As%20dori%20sa%20programez%20o%20consultatie.&type=phone_number&app_absent=0"
          target="_blank"
          rel="noopener noreferrer"
          class="bg-primary-600 hover:bg-primary-700 text-white px-6 py-2.5 rounded-full font-semibold transition-all duration-300 hover:scale-105 shadow-md"
        >
          Programează-te
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        data-collapse-toggle="mobile-menu"
        type="button"
        class="lg:hidden inline-flex items-center p-2 text-gray-700 rounded-lg hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200"
