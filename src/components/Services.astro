---
import servicesData from '../data/services.json';

// Calculate discounted prices
const calculatePrice = (originalPrice: number) => {
  if (servicesData.discount.enabled) {
    const discountedPrice = originalPrice * (1 - servicesData.discount.percentage / 100);
    return Math.round(discountedPrice);
  }
  return originalPrice;
};

const services = servicesData.services.map(service => ({
  ...service,
  discountedPrice: calculatePrice(service.originalPrice),
  hasDiscount: servicesData.discount.enabled
}));

const additionalServices = servicesData.additionalServices.map(service => ({
  ...service,
  discountedPrice: calculatePrice(service.originalPrice),
  hasDiscount: servicesData.discount.enabled
}));
---

<section id="servicii" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="text-primary-600 font-semibold text-sm uppercase tracking-wider">Servicii Oferite</span>
      <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mt-4 mb-6">
        Transformă-ți Privirea cu
        <span class="text-primary-600">Micropigmentare Profesională</span>
      </h2>
      <p class="text-lg text-gray-600">
        Descoperă gama completă de servicii de micropigmentare și îndepărtare laser, realizate cu tehnologii moderne și produse premium.
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
      {services.map((service, index) => (
        <div class="group relative bg-white rounded-2xl border-2 border-gray-100 hover:border-primary-200 transition-all duration-300 hover:shadow-2xl overflow-hidden">
          <!-- Gradient Background -->
          <div class={`absolute inset-0 bg-gradient-to-br ${service.gradient} opacity-0 group-hover:opacity-5 transition-opacity duration-300`}></div>

          <div class="relative p-8">
            <!-- Icon -->
            <div class={`inline-flex p-4 rounded-2xl bg-gradient-to-br ${service.gradient} text-white mb-6 shadow-lg`}>
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <Fragment set:html={service.icon} />
              </svg>
            </div>

            <!-- Content -->
            <div class="mb-6">
              <h3 class="text-2xl font-bold text-gray-900 mb-1">{service.title}</h3>
              <p class="text-primary-600 font-semibold">{service.subtitle}</p>
            </div>

            <p class="text-gray-600 mb-6 leading-relaxed">
              {service.description}
            </p>

            <!-- Features -->
            <ul class="space-y-3 mb-6">
              {service.features.map(feature => (
                <li class="flex items-center gap-3">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  <span class="text-gray-700">{feature}</span>
                </li>
              ))}
            </ul>

            <!-- Price & CTA -->
            <div class="flex items-center justify-between pt-6 border-t border-gray-100">
              <div>
                <div class="text-sm text-gray-500">Preț de la</div>
                {service.hasDiscount ? (
                  <div class="flex flex-col gap-1">
                    <div class="text-lg text-gray-400 line-through">{service.originalPrice} {service.currency}</div>
                    <div class="flex items-center gap-2">
                      <div class="text-3xl font-bold text-primary-600">{service.discountedPrice} {service.currency}</div>
                      <span class="bg-red-500 text-white text-xs font-bold px-2 py-1 rounded">-{servicesData.discount.percentage}%</span>
                    </div>
                  </div>
                ) : (
                  <div class="text-3xl font-bold text-gray-900">{service.originalPrice} {service.currency}</div>
                )}
              </div>
              <a
                href="https://api.whatsapp.com/send/?phone=40732163268&text=Buna%20ziua,%20as%20dori%20informatii%20despre%20{service.title}&type=phone_number&app_absent=0"
                target="_blank"
                rel="noopener noreferrer"
                class={`inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r ${service.gradient} text-white rounded-full font-semibold transition-all duration-300 hover:scale-105 shadow-md hover:shadow-xl`}
              >
                Rezervă
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Additional Services -->
    <div class="mt-12 max-w-4xl mx-auto">
      <div class="bg-gradient-to-r from-primary-50 to-pink-50 rounded-2xl p-8 border border-primary-100">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">Servicii Suplimentare</h3>
        <div class="grid md:grid-cols-2 gap-6">
          {additionalServices.map(service => (
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-white rounded-full flex items-center justify-center shadow-md">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <Fragment set:html={service.icon} />
                </svg>
              </div>
              <div>
                <h4 class="font-bold text-gray-900 mb-1">{service.title}</h4>
                <p class="text-gray-600 text-sm mb-2">{service.description}</p>
                {service.hasDiscount ? (
                  <div class="flex flex-col gap-1">
                    <p class="text-sm text-gray-400 line-through">{service.originalPrice} {service.currency}</p>
                    <div class="flex items-center gap-2">
                      <p class="text-xl font-bold text-primary-600">{service.discountedPrice} {service.currency}</p>
                      <span class="bg-red-500 text-white text-xs font-bold px-2 py-0.5 rounded">-{servicesData.discount.percentage}%</span>
                    </div>
                  </div>
                ) : (
                  <p class="text-xl font-bold text-primary-600">{service.originalPrice} {service.currency}</p>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
